{
  "name": "formschema",
  "version": "1.0.0",
  "description": "Schema-Driven, Isomorphic Form & Validation Engine",
  "author": "Gaurav Pasi <gauravpasi9594@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gaurav-pasi/FormSchema-.git"
  },
  "homepage": "https://github.com/Gaurav-pasi/FormSchema-#readme",
  "bugs": {
    "url": "https://github.com/Gaurav-pasi/FormSchema-/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./backend": {
      "types": "./dist/adapters/backend/index.d.ts",
      "import": "./dist/adapters/backend/index.mjs",
      "require": "./dist/adapters/backend/index.js"
    },
    "./frontend": {
      "types": "./dist/adapters/frontend/index.d.ts",
      "import": "./dist/adapters/frontend/index.mjs",
      "require": "./dist/adapters/frontend/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "forms",
    "validation",
    "schema",
    "isomorphic",
    "typescript",
    "enterprise"
  ],
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "express": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
