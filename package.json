{
  "name": "unischema",
  "version": "1.2.0",
  "description": "TypeScript-first schema validation library with 53+ validators, async validation, transforms, hard/soft errors. Alternative to Zod, Yup, Joi. Works everywhere (browser, Node.js, serverless).",
  "author": "Gaurav Pasi <gauravpasi9594@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gaurav-pasi/unischema.git"
  },
  "homepage": "https://github.com/Gaurav-pasi/unischema#readme",
  "bugs": {
    "url": "https://github.com/Gaurav-pasi/unischema/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./backend": {
      "types": "./dist/adapters/backend/index.d.ts",
      "import": "./dist/adapters/backend/index.mjs",
      "require": "./dist/adapters/backend/index.js"
    },
    "./frontend": {
      "types": "./dist/adapters/frontend/index.d.ts",
      "import": "./dist/adapters/frontend/index.mjs",
      "require": "./dist/adapters/frontend/index.js"
    },
    "./validators": {
      "types": "./dist/validators/index.d.ts",
      "import": "./dist/validators/index.mjs",
      "require": "./dist/validators/index.js"
    },
    "./validators/string": {
      "types": "./dist/validators/string.d.ts",
      "import": "./dist/validators/string.mjs",
      "require": "./dist/validators/string.js"
    },
    "./validators/number": {
      "types": "./dist/validators/number.d.ts",
      "import": "./dist/validators/number.mjs",
      "require": "./dist/validators/number.js"
    },
    "./validators/date": {
      "types": "./dist/validators/date.d.ts",
      "import": "./dist/validators/date.mjs",
      "require": "./dist/validators/date.js"
    },
    "./validators/array": {
      "types": "./dist/validators/array.d.ts",
      "import": "./dist/validators/array.mjs",
      "require": "./dist/validators/array.js"
    },
    "./validators/object": {
      "types": "./dist/validators/object.d.ts",
      "import": "./dist/validators/object.mjs",
      "require": "./dist/validators/object.js"
    },
    "./validators/common": {
      "types": "./dist/validators/common.d.ts",
      "import": "./dist/validators/common.mjs",
      "require": "./dist/validators/common.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "validation",
    "validator",
    "schema",
    "typescript",
    "zod",
    "yup",
    "joi",
    "form-validation",
    "data-validation",
    "async-validation",
    "schema-validation",
    "type-safe",
    "runtime-validation",
    "form",
    "forms",
    "react-form",
    "vue-form",
    "next.js",
    "express",
    "isomorphic",
    "universal",
    "frontend",
    "backend",
    "serverless",
    "api-validation",
    "input-validation",
    "email-validator",
    "url-validator",
    "date-validator",
    "string-validator",
    "number-validator",
    "type-checking",
    "runtime-type-checking",
    "typescript-validation",
    "schema-builder",
    "form-builder",
    "data-schema",
    "json-schema",
    "enterprise",
    "hard-soft-validation",
    "soft-errors",
    "warnings",
    "transform",
    "coerce",
    "sanitize",
    "parse",
    "validate",
    "check"
  ],
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "express": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
